---
layout: base.liquid
---

<div class="container section">
  <div class="product-detail-grid">

    <div class="product-detail-image">
      {% if image %}
        <img src="{{ image }}" alt="{{ title | escape }}">
      {% else %}
        <img src="/icons/icon-512x512.png" alt="Service image">
      {% endif %}
    </div>

    <div class="product-detail-info">
      <h1 class="product-detail-title">{{ title }}</h1>

      {% if price %}
        <span class="product-detail-price">Starting from â‚¹{{ price }}</span>
      {% endif %}

      {% if category %}
        <span class="product-detail-category">{{ category }}</span>
      {% endif %}

      <div class="product-detail-actions" style="grid-template-columns: 1fr;">
        {% assign wapp_text = "Hello, I would like to book the '" | append: title | append: "' service." %}
        <a href="https://wa.me/7250470009?text={{ wapp_text | url_encode }}" 
           class="btn-buy" 
           target="_blank">
          Book Now
        </a>
      </div>
    </div>

  </div>
</div>

<div class="product-accordion-container">

  {% if description or service_information %}
  <details class="accordion-item" open>
    <summary class="accordion-summary">
      <h3 class="accordion-heading">Service Information</h3>
      <span class="accordion-caret">^</span>
    </summary>
    <div class="accordion-content">
      <p class="accordion-description-text">
        {{ description }} <br> {{ service_information }}
      </p>
    </div>
  </details>
  {% endif %}

  {% assign current_cat = category %}
  {% assign related_works = collections.works | where_exp: "work", "work.data.category == current_cat" %}

  {% if related_works.size > 0 %}
  <details class="accordion-item">
    <summary class="accordion-summary">
      <h3 class="accordion-heading">Our Works</h3>
      <span class="accordion-caret">^</span>
    </summary>
    <div class="accordion-content">
        <div style="display: flex; overflow-x: auto; gap: 10px; padding-bottom: 10px;">
          {% for work in related_works %}
          <div style="min-width: 150px; border: 1px solid #eee;">
            <img src="{{ work.data.image }}" style="width:100%; height:150px; object-fit:cover;">
            <p style="font-size:0.8rem; text-align:center; padding:5px;">{{ work.data.title }}</p>
          </div>
          {% endfor %}
        </div>
    </div>
  </details>
  {% endif %}

</div>
