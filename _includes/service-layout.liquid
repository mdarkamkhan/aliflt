---
layout: base.liquid
---

<div class="container section">
    
    <div class="product-detail-grid">
        
        <div class="product-detail-image">
            <img src="{{ image | url }}" alt="{{ title }}">
        </div>
        
        <div class="product-detail-info">
            <h1 class="product-detail-title">{{ title }}</h1>
            
            {% if price %}
                <span class="product-detail-price">â‚¹{{ price }}</span>
            {% endif %}
            
            {% if category %}
                <span class="product-detail-category">{{ category }}</span>
            {% endif %}

            <div class="product-detail-actions" style="grid-template-columns: 1fr;">
                <button class="btn-buy" id="bookNowBtn" 
                        data-service-title="{{ title | escape }}">
                    Book Now
                </button>
            </div>
        </div>
    </div>
</div>

<div class="product-accordion-container">

    {% if service_information %}
    <details class="accordion-item" open> 
        <summary class="accordion-summary">
            <h3 class="accordion-heading">Service Information</h3>
            <span class="accordion-caret">^</span>
        </summary>
        <div class="accordion-content">
            <div>
                <p class="accordion-description-text">{{ service_information }}</p>
            </div>
        </div>
    </details>
    {% endif %}

    {% assign related_works = collections.works | where_exp: "work", "work.data.category == category" %}

    {% if related_works.size > 0 %}
    <details class="accordion-item" open>
        <summary class="accordion-summary"> <h3 class="accordion-heading">Our Works</h3>
            <span class="accordion-caret">^</span>
        </summary>
        <div class="accordion-content">
            <div>
                <div class="works-gallery-container">
                    {% for work in related_works %}
                    <div class="work-gallery-item">
                        <img src="{{ work.data.image | url }}" alt="{{ work.data.title }}">
                        <p class="work-gallery-title">{{ work.data.title }}</p>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </details>
    {% endif %}
</div>
