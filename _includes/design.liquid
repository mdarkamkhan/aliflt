---
layout: base.liquid
---

<div class="container section">
  <div class="product-detail-grid">

    <div class="product-detail-image">
      {% if image %}
        <img src="{{ image }}" alt="{{ title | escape }}" style="width:100%; border:1px solid #eee;">
      {% else %}
        <img src="/icons/icon-512x512.png" alt="Design image">
      {% endif %}
    </div>

    <div class="product-detail-info">
      <h1 class="product-detail-title" style="font-size: 2rem; margin-bottom: 10px;">{{ title }}</h1>

      {% if price and price > 0 %}
        <p class="product-detail-price" style="font-size: 1.2rem; font-weight: bold; margin: 15px 0;">
            Charges: â‚¹{{ price }}
        </p>
      {% else %}
         <p class="product-detail-price" style="font-size: 1.2rem; color: #777; margin: 15px 0;">
            Price on Request
        </p>
      {% endif %}

      {% if category %}
        <p class="product-detail-category" style="color:#666; text-transform: uppercase; letter-spacing:1px;">
            Use: {{ category }}
        </p>
      {% endif %}

      <div class="product-description" style="margin-top: 20px; margin-bottom: 30px; line-height: 1.6;">
        {{ content }}
      </div>

      <div class="product-detail-actions">
        {%- capture wapp_message -%}
        Hello,
        I am interested in this design: {{ title }}
        Link: https://aliflt.netlify.app{{ page.url }}
        {%- endcapture -%}

        <a href="https://wa.me/7250470009?text={{ wapp_message | strip | url_encode }}" 
           class="btn-buy" 
           target="_blank"
           style="display:inline-block; width:100%; text-align:center;">
          Request This Design
        </a>
      </div>
    </div>

  </div>
</div>
