    <script src="https://cdn.jsdelivr.net/npm/fuse.js@6.6.2"></script>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            let searchIndex = [];
            const overlay = document.getElementById('search-overlay');
            const input = document.getElementById('search-input');
            const resultsContainer = document.getElementById('search-results');
            const openBtn = document.getElementById('open-search');
            const closeBtn = document.getElementById('close-search');

            fetch('/search.json').then(res => res.json()).then(data => { searchIndex = data; });

            if(openBtn) openBtn.onclick = () => { overlay.classList.add('active'); setTimeout(() => input.focus(), 100); };
            if(closeBtn) closeBtn.onclick = () => { overlay.classList.remove('active'); input.value = ''; resultsContainer.innerHTML = ''; };

            // Typewriter
            const words = ["Lace...", "Latkan...", "Velvet...", "Blouse...", "Net...", "Diamond Work..."];
            let i = 0, j = 0, currentWord = "", isDeleting = false, isEnd = false;

            function typeEffect() {
                isEnd = false; currentWord = words[i];
                if (isDeleting) {
                    input.placeholder = currentWord.substring(0, j--);
                    if (j < 0) { isDeleting = false; i++; if (i == words.length) i = 0; }
                } else {
                    input.placeholder = currentWord.substring(0, j++);
                    if (j == currentWord.length + 1) { isEnd = true; isDeleting = true; }
                }
                const speed = isEnd ? 2000 : isDeleting ? 50 : 100;
                setTimeout(typeEffect, speed);
            }
            typeEffect();

            input.addEventListener('input', (e) => {
                const query = e.target.value;
                if(query.length < 2) { resultsContainer.innerHTML = ''; return; }

                const fuse = new Fuse(searchIndex, {
                    keys: [
                        { name: 'title', weight: 0.4 },
                        { name: 'category', weight: 0.2 },
                        { name: 'colour', weight: 0.2 }, // Color Search
                        { name: 'fabric', weight: 0.1 }, // Fabric Search
                        { name: 'ideal_for', weight: 0.05 },
                        { name: 'work', weight: 0.05 }
                    ],
                    threshold: 0.4,
                    ignoreLocation: true
                });

                const results = fuse.search(query);
                if(results.length > 0) {
                    resultsContainer.innerHTML = results.map(res => `
                        <a href="${res.item.url}" class="search-item">
                            <img src="${res.item.image}" alt="${res.item.title}">
                            <div><h4>${res.item.title}</h4><span>${res.item.category}</span></div>
                            <span class="s-arrow">→</span>
                        </a>`).join('');
                } else {
                    resultsContainer.innerHTML = `<p style="text-align:center; color:#999; margin-top:20px;">No results.</p>`;
                }
            });
        });
    </script> 
