    <script>
        // ... (Upar wala purana Search Logic waisa hi rahega) ...

          // ==========================================
        // ðŸ¤– FUTURISTIC TYPEWRITER EFFECT (Updated)
        // ==========================================
        const target = document.getElementById('search-input');
        
        // Sirf Keywords (Bina "Search for" ke)
        const words = [
            "Lace...", 
            "Latkan...", 
            "Velvet...", 
            "Blouse Designs...", 
            "Net Fabric...", 
            "Diamond Work...", 
            "Georgette...", 
            "Banarasi...", 
            "Cotton...",
            "Astar & Fall..."
        ];

        let i = 0;
        let j = 0;
        let currentWord = "";
        let isDeleting = false;
        let isEnd = false;

        function typeEffect() {
            isEnd = false;
            currentWord = words[i];

            if (isDeleting) {
                target.placeholder = currentWord.substring(0, j--);
                if (j < 0) {
                    isDeleting = false;
                    i++;
                    if (i == words.length) i = 0;
                }
            } else {
                target.placeholder = currentWord.substring(0, j++);
                if (j == currentWord.length + 1) {
                    isEnd = true;
                    isDeleting = true;
                }
            }

            const speed = isEnd ? 2000 : isDeleting ? 50 : 100; 
            setTimeout(typeEffect, speed);
        }

        typeEffect();


        // ... (Baaki purana code: fetch data, open search, etc.) ...
        
        let searchIndex = [];
        const overlay = document.getElementById('search-overlay');
        const input = document.getElementById('search-input');
        const resultsContainer = document.getElementById('search-results');

        fetch('/search.json').then(res => res.json()).then(data => { searchIndex = data; });

        document.getElementById('open-search').addEventListener('click', () => {
            overlay.classList.add('active');
            setTimeout(() => input.focus(), 100);
        });

        document.getElementById('close-search').addEventListener('click', () => {
            overlay.classList.remove('active');
            input.value = '';
            resultsContainer.innerHTML = '';
        });

        input.addEventListener('input', (e) => {
            const query = e.target.value;
            if(query.length < 2) { resultsContainer.innerHTML = ''; return; }

            const fuse = new Fuse(searchIndex, {
                keys: [
                    { name: 'title', weight: 0.4 },
                    { name: 'category', weight: 0.2 },
                    { name: 'colour', weight: 0.2 },
                    { name: 'fabric', weight: 0.1 },
                    { name: 'ideal_for', weight: 0.05 },
                    { name: 'work', weight: 0.05 }
                ],
                threshold: 0.4,
                ignoreLocation: true
            });

            const results = fuse.search(query);
            
            if(results.length > 0) {
                resultsContainer.innerHTML = results.map(res => `
                    <a href="${res.item.url}" class="search-item">
                        <img src="${res.item.image}" alt="${res.item.title}">
                        <div>
                            <h4>${res.item.title}</h4>
                            <span>${res.item.category} ${res.item.colour ? 'â€¢ ' + res.item.colour : ''}</span>
                        </div>
                        <span class="s-arrow">â†’</span>
                    </a>
                `).join('');
            } else {
                resultsContainer.innerHTML = `<p style="text-align:center; color:#999; margin-top:20px;">No results for "${query}"</p>`;
            }
        });
    </script>

