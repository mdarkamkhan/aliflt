---
layout: base.liquid
title: Our Products
permalink: /products/
---

<div class="container section">
    
    <h2>Our Products</h2>

    <div class="product-grid">
        
        {% for item in collections.products %}
        <a href="/products/{{ item.fileSlug }}/" class="product-card">
            
            <div class="product-card-image-wrapper">
                <img src="{{ item.data.image | url }}" alt="{{ item.data.title }}">
            </div>
            
            <div class="product-card-name" style="text-align: center; padding: 15px 0;">
                
                <!-- Title uses Libre Baskerville -->
                <div class="product-card-title" style="text-transform: uppercase;">
                    {{ item.data.title }}
                </div>
                
                {% if item.data.category %}
                <div class="product-card-category" style="margin-top: 5px; color: var(--color-text); font-weight: 300; text-transform: none;">
                    {{ item.data.category }}
                </div>
                {% endif %}
                
                {% if item.data.price %}
                <div class="product-card-price" style="margin-top: 10px;">
                    â‚¹{{ item.data.price }}
                </div>
                {% endif %}
                
                <!-- Removed Description Details for clean gallery view -->

            </div>
        </a>
        {% endfor %}

        {% if collections.products.size == 0 %}
            <p class='empty-gallery-message' style="position: static; transform: none; color: var(--color-text);">
                No products found. Please check back soon.
            </p>
        {% endif %}
    </div>
</div>

