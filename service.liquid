---
layout: base.liquid
title: Our Services & Works
permalink: /services-works/
---

<div class="container section fade-in-section">
    <h2>Our Services & Works</h2>

    <div class="product-grid">
        
        {% assign combined_list = collections.services | concat: collections.works %}
        
        {% for item in combined_list %}
        
            {% comment %}
                We must check if the item is a 'service' or a 'work'.
                'service' items have tags, 'work' items also have tags.
                We check for the 'service' tag.
            {% endcomment %}
            {% assign item_is_service = false %}
            {% for tag in item.data.tags %}
                {% if tag == 'service' %}
                    {% assign item_is_service = true %}
                {% endif %}
            {% endfor %}


            {% if item_is_service %}
                <!-- ðŸ’¡ IT'S A SERVICE: Make a clickable link -->
                <a href="/services/{{ item.fileSlug }}/" class="product-card">
                    <div class="product-card-image-wrapper">
                        <img src="{{ item.data.image | url }}" alt="{{ item.data.title }}">
                    </div>
                    <div class="product-card-name" style="text-align: left; padding: 15px; font-weight: normal;">
                        <div class="product-card-title" style="font-weight: bold; font-size: 1.1rem; text-transform: capitalize; color: #333;">
                            {{ item.data.title }}
                        </div>
                        {% if item.data.price %}
                        <div class="product-card-price" style="font-weight: bold; font-size: 1.1rem; margin-top: 8px; color: #000;">
                            â‚¹{{ item.data.price }}
                        </div>
                        {% endif %}
                        {% if item.data.category %}
                        <div class="product-card-category" style="font-size: 0.9rem; color: #777; margin-top: 8px; text-transform: capitalize;">
                            {{ item.data.category }}
                        </div>
                        {% endif %}
                    </div>
                </a>
            {% else %}
                <!-- ðŸ’¡ IT'S A WORK: Make a non-clickable card -->
                <div class="product-card" style="opacity: 0.8;">
                    <div class="product-card-image-wrapper">
                        <img src="{{ item.data.image | url }}" alt="{{ item.data.title }}">
                    </div>
                    <div class="product-card-name" style="text-align: left; padding: 15px; font-weight: normal;">
                        <div class="product-card-title" style="font-weight: bold; font-size: 1.1rem; text-transform: capitalize; color: #333;">
                            {{ item.data.title }}
                        </div>
                        {% if item.data.category %}
                        <div class="product-card-category" style="font-size: 0.9rem; color: #777; margin-top: 8px; text-transform: capitalize;">
                            (Work) {{ item.data.category }}
                        </div>
                        {% endif %}
                    </div>
                </div>
            {% endif %}

        {% endfor %}

        {% if combined_list.size == 0 %}
            <p class='empty-gallery-message' style="position: static; transform: none; color: #333;">
                No services or works found. Please check back soon.
            </p>
        {% endif %}
    </div>
</div>

