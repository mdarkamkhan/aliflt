---
layout: base.liquid
title: Our Services & Works
permalink: /services-works/
---

<div class="container section">
    <h2>Our Services & Works</h2>

    <div class="product-grid">
        
        {% assign combined_list = collections.services | concat: collections.works %}
        
        {% for item in combined_list %}
        <!-- FIX: Linking to the new, unique detail page generated by service-work-detail.liquid -->
        <a href="/services-works/{{ item.fileSlug }}/" class="product-card">
            <div class="product-card-image-wrapper">
                <img src="{{ item.data.image | url }}" alt="{{ item.data.title }}">
            </div>
            
            <div class="product-card-name" style="text-align: center; padding: 15px 0; font-weight: normal;">
                
                <div class="product-card-title" style="font-weight: 400; font-size: 1.2rem; text-transform: uppercase; color: var(--color-text); letter-spacing: 1px;">
                    {{ item.data.title }}
                </div>
                
                {% if item.data.category %}
                <div class="product-card-category" style="font-size: 0.85rem; color: var(--color-text); margin-top: 5px; text-transform: none; font-weight: 300; letter-spacing: 0.5px;">
                    {{ item.data.category }}
                </div>
                {% endif %}
                
                {% if item.data.price %}
                <div class="product-card-price" style="font-weight: 600; font-size: 1.1rem; margin-top: 10px; color: var(--color-text);">
                    â‚¹{{ item.data.price }}
                </div>
                {% endif %}
                
            </div>
        </a>
        {% endfor %}

        {% if combined_list.size == 0 %}
            <p class='empty-gallery-message' style="position: static; transform: none; color: var(--color-text);">
                No services or works found. Please check back soon.
            </p>
        {% endif %}
    </div>
</div>

