---
layout: base.liquid
title: Services & Works
permalink: /services-works/
---

<div id="services" class="section container fade-in-section">
    <h2>Our Services</h2>
    
    <div class="swapper-container services-swapper">
        
        {% for item in collections.services %}
        <div class="swapper-item {% if forloop.first %}active{% endif %}">
            <img src="{{ item.data.image }}" alt="{{ item.data.title }}">
            <div class="service-details">
                <h3>{{ item.data.title }}</h3>
            </div>
        </div>
        {% endfor %}

        {% if collections.services.length > 1 %}
        <div class="swapper-nav">
            <button class="swapper-nav-btn prev-btn">❮</button>
            <button class="swapper-nav-btn next-btn">❯</button>
        </div>
        {% endif %}

        {% if collections.services.length == 0 %}
            <p class='empty-gallery-message'>Our services will be listed here soon.</p>
        {% endif %}
    </div>
</div>

<div id="works" class="section container fade-in-section">
    <h2>Our Works</h2>
    
    <div class="swapper-container works-swapper">
        
        {% for item in collections.works %}
        <div class="swapper-item {% if forloop.first %}active{% endif %}">
            <img src="{{ item.data.image }}" alt="{{ item.data.title }}">
            <div class="work-caption">
                <h3>{{ item.data.title }}</h3>
            </div>
        </div>
        {% endfor %}

        {% if collections.works.length > 1 %}
        <div class="swapper-nav">
            <button class="swapper-nav-btn prev-btn">❮</button>
            <button class="swapper-nav-btn next-btn">❯</button>
        </div>
        {% endif %}

        {% if collections.works.length == 0 %}
            <p class='empty-gallery-message'>Our recent work will be listed here soon.</p>
        {% endif %}
    </div>
</div>
