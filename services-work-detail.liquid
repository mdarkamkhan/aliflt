---
layout: base.liquid
size: 1
alias: item 

# This generates the unique permalink for the combined collection
permalink: "services-works/{{ item.fileSlug }}/"

# CRITICAL FIX: Moving pagination inside eleventyComputed and quoting the Liquid logic
# This prevents the YAML parser from breaking on the ':' and '|' characters.
eleventyComputed:
  pagination: 
    data: '{{ collections.services | concat: collections.works }}'
  
  # This sets the <title> tag for each page
  title: "{{ item.data.title }}" 
---

<div class="container section">
    
    <div class="product-detail-grid">
        
        <!-- Column 1: Image -->
        <div class="product-detail-image">
            <img src="{{ item.data.image | url }}" alt="{{ item.data.title }}">
        </div>
        
        <!-- Column 2: Info -->
        <div class="product-detail-info">
            <!-- Using H1 for the page title for maximum impact -->
            <h1 class="product-detail-title">{{ item.data.title }}</h1>
            
            {% if item.data.price %}
                <span class="product-detail-price">Price starting from: â‚¹{{ item.data.price }}</span>
            {% endif %}
            
            {% if item.data.category %}
                <!-- Category uses the same luxury style as product page -->
                <span class="product-detail-category">{{ item.data.category }}</span>
            {% endif %}

            <!-- Contact action since these are services/works, not cart items -->
            <div class="product-detail-actions" style="grid-template-columns: 1fr;">
                <a href="https://wa.me/7250470009?text=I%20am%20interested%20in%20the%20{{ item.data.title }}%20you%20showed%20on%20the%20website." class="btn-buy" style="text-decoration: none;" target="_blank">
                    Inquire on WhatsApp
                </a>
            </div>
            
            {% if item.data.description %}
                <div class="product-detail-description">
                    <h3>Description</h3>
                    <p>{{ item.data.description }}</p>
                </div>
            {% endif %}
        </div>
    </div>
</div>

