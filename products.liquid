---
layout: base.liquid
title: Our Products
permalink: /products/
---

<div class="container section fade-in-section">

    <div class="filter-bar-scroll-container">
        <button class="filter-btn active" data-filter-values="all">
            <img src="/icons/all-categories.png" alt="All Categories" class="filter-icon">
            <span class="filter-name">All</span>
        </button>
        {% for category in categoryFilters.categories %}
        <button class="filter-btn" data-filter-values="{{ category.values | join: ',' | downcase }}">
            <img src="/icons/{{ category.icon }}" alt="{{ category.name }}" class="filter-icon">
            <span class="filter-name">{{ category.name }}</span>
        </button>
        {% endfor %}
    </div>

    <div class="product-grid">
        
        {% for item in collections.products reversed %}
        
        <a href="{{ item.url }}" class="product-card" data-category="{{ item.data.category | downcase }}">
            
            <div class="product-card-image-wrapper">
                {% if item.data.image %}
                  <img src="{{ item.data.image | url }}" alt="{{ item.data.title }}">
                {% else %}
                  <img src="/icons/icon-512x512.png" alt="Product">
                {% endif %}
            </div>
            
            <div class="product-card-name">
                {{ item.data.title }}
            </div>
            
            <div style="text-align: center; padding: 0 10px 20px; font-family: var(--font-body); font-weight: 300; font-size: 0.95rem;">
                {% if item.data.category %}
                <span class="product-card-category" style="color: #777; text-transform: capitalize;">
                    {{ item.data.category }}
                </span>
                {% endif %}
                
                {% if item.data.price %}
                <span class="product-card-price" style="font-weight: 400; color: #000; margin-left:5px;">
                    â‚¹{{ item.data.price }}
                </span>
                {% endif %}
            </div>

        </a>
        {% endfor %}

        {% if collections.products.size == 0 %}
            <p class='empty-gallery-message' style="position: static; transform: none; color: #333; width:100%; text-align:center;">
                No products found. Please check back soon.
            </p>
        {% endif %}
    </div>
</div>
