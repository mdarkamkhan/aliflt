---
layout: base.liquid
title: Our Products
permalink: /products/
---

<div class="container section fade-in-section">
    
    <h2>Our Products</h2>

    <div class="product-grid">
        
        {% for item in collections.products %}
        <a href="/products/{{ item.fileSlug }}/" class="product-card">
            
            <div class="product-card-image-wrapper">
                <img src="{{ item.data.image | url }}" alt="{{ item.data.title }}">
            </div>
            
            <div class="product-card-name">
                {{ item.data.title }}
            </div>
            
            <div style="text-align: center; padding: 0 10px 20px; font-family: var(--font-body); font-weight: 300; font-size: 0.95rem;">
                
                {% if item.data.category %}
                <span class="product-card-category" style="color: #777; text-transform: capitalize;">
                    {{ item.data.category }}
                </span>
                {% endif %}
                
                {% if item.data.price and item.data.category %}
                    <span style="color: #aaa; margin: 0 6px;">&bull;</span>
                {% endif %}

                {% if item.data.price %}
                <span class="product-card-price" style="font-weight: 400; color: #000;">
                    â‚¹{{ item.data.price }}
                </span>
                {% endif %}
            </div>

            </a>
        {% endfor %}

        {% if collections.products.size == 0 %}
            <p class='empty-gallery-message' style="position: static; transform: none; color: #333;">
                No products found. Please check back soon.
            </p>
        {% endif %}
    </div>
</div>
