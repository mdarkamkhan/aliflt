---
layout: base.liquid
title: Home
permalink: /
---

<div id="top-banner">
    <div class="swapper-container banner-swapper">
        {% for item in collections.offers %}
        <div class="swapper-item {% if forloop.first %}active{% endif %}">
            <img src="{{ item.data.image | url }}" alt="{{ item.data.title }}">
            <div class="banner-content">
                <h2>{{ item.data.title }}</h2>
            </div>
        </div>
        {% endfor %}
        {% if collections.offers.length == 0 %}
            <p class='empty-gallery-message'>Loading offers...</p>
        {% endif %}
    </div>
</div>

<a href="/products/" class="prada-panel">
    <div class="prada-panel-label">ALiF Products</div>
    
    <div class="swapper-container products-panel-gallery">
        {% for item in collections.products %}
        <div class="swapper-item {% if forloop.first %}active{% endif %}">
            <img src="{{ item.data.image | url }}" alt="{{ item.data.title }}">
        </div>
        {% endfor %}

        {% if collections.products.length == 0 %}
            <p class='empty-gallery-message'>Products coming soon.</p>
        {% endif %}
    </div>
</a>

<a href="/services-work/" class="prada-panel">
    <div class="prada-panel-label">ALiF Services</div>
    
    <div class="swapper-container services-panel-gallery">
        {% for item in collections.services %}
        <div class="swapper-item {% if forloop.first %}active{% endif %}">
            <img src="{{ item.data.image | url }}" alt="{{ item.data.title }}">
        </div>
        {% endfor %}

        {% if collections.services.length == 0 %}
            <p class='empty-gallery-message'>Services coming soon.</p>
        {% endif %}
    </div>
</a>

<a href="/services-work/" class="prada-panel">
    <div class="prada-panel-label">ALiF Works</div>
    
    <div class="swapper-container works-panel-gallery">
        {% for item in collections.works %}
        <div class="swapper-item {% if forloop.first %}active{% endif %}">
            <img src="{{ item.data.image | url }}" alt="{{ item.data.title }}">
        </div>
        {% endfor %}

        {% if collections.works.length == 0 %}
            <p class='empty-gallery-message'>Our work coming soon.</p>
        {% endif %}
    </div>
</a>

<div class="container section">
    <h2>Our Services & Works</h2>

    <div class="product-grid">
        
        {% for item in collections.services %}
        <a href="/service/{{ item.fileSlug }}/" class="product-card">
            <div class="product-card-image-wrapper">
            {% if item.data.image %}
                <img src="{{ item.data.image | url }}" alt="{{ item.data.title | escape }}">
            {% endif %}
            </div>

            <div class="product-card-name" style="text-align:left; padding:15px; font-weight:normal;">
            <div class="product-card-title" style="font-weight:bold; font-size:1.1rem; text-transform:capitalize; color:#333;">
                {{ item.data.title | default: 'Service' }}
            </div>

            {% if item.data.price %}
            <div class="product-card-price" style="font-weight:bold; font-size:1.1rem; margin-top:8px; color:#000;">
                â‚¹{{ item.data.price }}
            </div>
            {% endif %}

            {% if item.data.category %}
            <div class="product-card-category" style="font-size:0.9rem; color:#777; margin-top:8px; text-transform:capitalize;">
                {{ item.data.category }}
            </div>
            {% endif %}
            </div>
        </a>
        {% endfor %}

        {% for item in collections.works %}
        <div class="product-card" style="opacity:0.92; box-shadow:0 2px 8px rgba(0,0,0,0.06);">
            <div class="product-card-image-wrapper">
            {% if item.data.image %}
                <img src="{{ item.data.image | url }}" alt="{{ item.data.title | escape }}">
            {% endif %}
            </div>

            <div class="product-card-name" style="text-align:left; padding:15px; font-weight:normal;">
            <div class="product-card-title" style="font-weight:bold; font-size:1.1rem; text-transform:capitalize; color:#333;">
                {{ item.data.title | default: 'Our Work' }}
            </div>

            {% if item.data.category %}
            <div class="product-card-category" style="font-size:0.9rem; color:#777; margin-top:8px; text-transform:capitalize;">
                (Our Work) {{ item.data.category }}
            </div>
            {% endif %}
            </div>
        </div>
        {% endfor %}

        {% assign services_size = collections.services.size %}
        {% assign works_size = collections.works.size %}
        {% assign combined_size = services_size | plus: works_size %}

        {% if combined_size == 0 %}
        <p class="empty-gallery-message" style="position:static; transform:none; color:#333;">
            No services or works found. Please check back soon.
        </p>
        {% endif %}
    </div>
</div>
<div class="container">
    
    <details id="reviews" class="section collapsible-section">
        
        <summary class="collapsible-summary">
            <h2>Client Reviews</h2>
            <div class="icon-plus-minus"></div>
        </summary>
        
        <div class="collapsible-content">
            <div> <p style="text-align: center; margin-bottom: 25px;">Did you love our service? Help others find us by leaving a review!</p>
                
                <div class="cta-buttons">
                    <a href="https://g.page/r/Cf2GRfVJZtFFEAE/review" target="_blank" class="review-btn">
                        Write a Review on Google
                    </a>
                </div>
                
                <div style="margin-top: 40px; border-top: 1px solid #eee; padding-top: 30px;">
                    <h3 style="text-align: center; color: #555;">What Our Clients Say</h3>
                    
                    <script src="https://elfsightcdn.com/platform.js" async></script>
                    <div class="elfsight-app-2c83f037-ee5d-4d90-913e-2a5f353d7add" data-elfsight-app-lazy></div>
                </div>
            </div>
        </div>
        </details>
</div>
