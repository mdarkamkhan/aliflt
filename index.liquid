        {% for item in collections.products %}
        <div class="swapper-item {% if forloop.first %}active{% endif %}">
            <img src="{{ item.data.image | url }}" alt="{{ item.data.title }}">
        </div>
        {% endfor %}

        {% if collections.products.length == 0 %}
            <p class='empty-gallery-message'>Products coming soon.</p>
