<!-- 
==================================================
===== BANNER (AUTO-FRAMED LUXURY) ================
================================================== 
-->
<div id="top-banner">
    <div class="swapper-container banner-swapper">
        {% for item in collections.offers %}
        <div class="swapper-item {% if forloop.first %}active{% endif %}">
            <img src="{{ item.data.image | url }}" alt="{{ item.data.title }}">
            <div class="banner-content">
                <!-- Heading uses Bodoni Moda -->
                <h2>{{ item.data.title }}</h2> 
            </div>
        </div>
        {% endfor %}
        {% if collections.offers.length == 0 %}
            <p class='empty-gallery-message' style="font-family: var(--font-body); color: var(--color-text);">Loading offers...</p>
        {% endif %}
    </div>
</div>

<!-- ================================= 
     PANEL 1: ALIF PRODUCTS 
================================== -->
